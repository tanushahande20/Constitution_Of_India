<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Constitution_Of_India" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Constitution_Of_India.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Constitution_Of_India.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Constitution_Of_India.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SCREEN">
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="BUTTON">
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">

        <item name="colorControlNormal">#4D000000</item>

        <item name="colorControlActivated">@color/dialog_color_1</item>
    </style>

</resources>