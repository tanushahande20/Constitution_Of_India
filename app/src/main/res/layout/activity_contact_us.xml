<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmets.ContactUs">
    <TextView
        android:id="@+id/cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACT FORM"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="40dp"
        android:fontFamily="@font/font_2"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cnt"
        android:text="FULL NAME : "
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/font1"
        android:textSize="18dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/light_grey"
        app:cardElevation="5dp"
        app:cardCornerRadius="16dp"
        android:layout_below="@+id/name1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp">
        <EditText
            android:id="@+id/ename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter here first name"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/font1"
            android:background="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card1"
        android:text="CITY : "
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/font1"
        android:textSize="18dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/light_grey"
        app:cardElevation="5dp"
        app:cardCornerRadius="16dp"
        android:layout_below="@+id/name2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp">
        <EditText
            android:id="@+id/ecity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter here city"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/font1"
            android:background="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card2"
        android:text="MOBILE NO : "
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/font1"
        android:textSize="18dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/light_grey"
        app:cardElevation="5dp"
        app:cardCornerRadius="16dp"
        android:layout_below="@+id/name3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp">
        <EditText
            android:id="@+id/ephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter here mobile no."
            android:inputType="number"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/font1"
            android:background="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/name4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card3"
        android:text="EMAIL ID : "
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/font1"
        android:textSize="18dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/light_grey"
        app:cardElevation="5dp"
        app:cardCornerRadius="16dp"
        android:layout_below="@+id/name4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp">
        <EditText
            android:id="@+id/eemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter here email id "
            android:inputType="textEmailAddress"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/font1"
            android:background="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/name5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card4"
        android:text="QUERY : "
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/font1"
        android:textSize="18dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card5"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/light_grey"
        app:cardElevation="5dp"
        app:cardCornerRadius="16dp"
        android:layout_below="@+id/name5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp">
        <EditText
            android:id="@+id/emessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="enter here you facing query "
            android:inputType="textLongMessage"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/font1"
            android:background="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card5"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold" />
</RelativeLayout>