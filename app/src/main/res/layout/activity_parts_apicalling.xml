<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activity.Parts_apicalling">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/rparts"
        android:background="@color/black">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/pback"
            android:src="@drawable/baseline_keyboard_arrow_left_24"
            android:tint="@color/white"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parts"
            android:textColor="@color/white"
            android:fontFamily="@font/font1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:textSize="20dp"/>

    </RelativeLayout>
    <ImageView
        android:id="@+id/img10"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_below="@id/rparts"
        android:src="@drawable/parts_bg"/>

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recycle6"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/rparts"
           android:orientation="horizontal"
           app:reverseLayout="true"/>
    <TextView
        android:id="@+id/text19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THE UNION AND ITS TERRITORY "
        android:layout_below="@id/img10"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:textSize="20dp"/>
    <ProgressBar
        android:id="@+id/progressbar6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/recycle6"/>

</RelativeLayout>
