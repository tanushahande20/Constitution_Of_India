<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_parts"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/part"
        android:layout_marginTop="10dp"
        android:text="PART I"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/txt_article"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@drawable/amendmentinputbox"
        android:layout_below="@+id/txt_parts"
        android:layout_marginTop="30dp"
        android:text="Article"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:gravity="center|top"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/chakra"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hgygy"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/text23"/>

</RelativeLayout>